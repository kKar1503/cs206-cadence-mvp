// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
    output   = "../generated/prisma"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id        String    @id @default(cuid())
    name      String?
    email     String    @unique
    password  String
    image     String?
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt

    listings  Listing[]
}

enum ListingType {
    VINYL
    CD
    CASSETTE
    MERCH
    EQUIPMENT
}

enum Condition {
    MINT
    NEAR_MINT
    VERY_GOOD_PLUS
    VERY_GOOD
    GOOD_PLUS
    GOOD
    FAIR
    POOR
}

model Listing {
    id                    String       @id @default(cuid())
    title                 String
    artist                String
    description           String       @db.Text
    type                  ListingType
    condition             Condition
    price                 Float
    imageUrl              String?
    year                  Int?
    genre                 String?
    label                 String?

    // AI verification fields
    isVerified            Boolean      @default(false)
    verifiedByOfficial    Boolean      @default(false)
    authenticityScore     Float?       // 0-100 probability score from AI

    // Marketplace fields
    isSold                Boolean      @default(false)
    views                 Int          @default(0)

    createdAt             DateTime     @default(now())
    updatedAt             DateTime     @updatedAt

    seller                User         @relation(fields: [sellerId], references: [id], onDelete: Cascade)
    sellerId              String

    @@index([title])
    @@index([artist])
    @@index([type])
    @@index([sellerId])
}
